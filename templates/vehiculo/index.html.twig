{% extends 'base.html.twig' %}

{% block title %}Vehiculo index{% endblock %}

{% block body %}
    <h1>Vehiculo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Patente</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>AÃ±o</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for vehiculo in vehiculos %}
            <tr>
                <td>{{ vehiculo.id }}</td>
                <td>{{ vehiculo.tipo }}</td>
                <td>{{ vehiculo.patente }}</td>
                <td>{{ vehiculo.marca }}</td>
                <td>{{ vehiculo.modelo }}</td>
                <td>{{ vehiculo.anio }}</td>
                <td>

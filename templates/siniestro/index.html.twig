{% extends 'base.html.twig' %}

{% block title %}Lista de Siniestros{% endblock %}

{% block body %}
<div class="container mt-4">

    <h1 class="mb-4">Lista de Siniestros</h1>

    <div class="card mb-4 p-3 shadow-sm">
        <h5 class="mb-3">Filtrar por fecha</h5>

        {{ form_start(filtro, {'method': 'GET'}) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(filtro.fecha_desde) }}
            </div>

            <div class="col-md-4">
                {{ form_row(filtro.fecha_hasta) }}
            </div>

            <div class="col-md-4 d-flex align-items-end">
                <button class="btn btn-primary w-100">Buscar</button>
            </div>
        </div>
        {{ form_end(filtro) }}
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Descripción</th>
                <th>Severidad</th>
                <th>Estado</th>
                <th>Localidad</th>
                <th>Calle</th>
                <th>Coordenadas</th>
                <th>N° Acta</th>
                <th style="width: 120px;">Acciones</th>
            </tr>
        </thead>

        <tbody>
        {% for siniestro in siniestros %}
            <tr>
                <td>{{ siniestro.id }}</td>
                <td>{{ siniestro.fecha ? siniestro.fecha|date('d/m/Y') : '' }}</td>
                <td>{{ siniestro.hora ? siniestro.hora|date('H:i') : '' }}</td>
                <td>{{ siniestro.descripcion }}</td>
                <td>{{ siniestro.severidad }}</td>
                <td>{{ siniestro.estado }}</td>
                <td>{{ siniestro.localidad }}</td>
                <td>{{ siniestro.calle }}</td>
                <td>{{ siniestro.coordenadas }}</td>
                <td>{{ siniestro.nroActa }}</td>

                <td>
                    <a href="{{ path('app_siniestro_show', {'id': siniestro.id}) }}"
                       class="btn btn-sm btn-info text-white mb-1">
                        Ver
                    </a>

                    <a href="{{ path('app_siniestro_edit', {'id': siniestro.id}) }}"
                       class="btn btn-sm btn-warning text-white">
                        Editar
                    </a>
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="11" class="text-center text-muted">
                    No se encontraron siniestros
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_siniestro_new') }}" class="btn btn-success">
            Crear nuevo siniestro
        </a>
    </div>

</div>
{% endblock %}

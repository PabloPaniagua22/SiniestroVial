{% extends 'base.html.twig' %}

{% block title %}
    {{ siniestro.id ? 'Editar Siniestro' : 'Nuevo Siniestro' }}
{% endblock %}

{% block body %}
<div class="container mt-5">

    <h1 class="text-center mb-4">
        {{ siniestro.id ? 'Editar Siniestro' : 'Registrar Nuevo Siniestro' }}
    </h1>

    <div class="card p-4 shadow-sm">
        {{ include('siniestro/_form.html.twig', { button_label: 'Guardar cambios' }) }}
    </div>
    {% for detalle in siniestro.detalleSiniestros %}
        {% if detalle.rutaDocumento %}
            <a href="{{ asset('uploads/documentos/' ~ detalle.rutaDocumento) }}" 
            target="_blank" 
            class="btn btn-outline-primary my-2">
                üìé Ver documento del detalle #{{ detalle.id }}
            </a>
        {% endif %}
    {% endfor %}

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_siniestro_index') }}" class="btn btn-secondary">
            ‚¨ÖÔ∏è Volver al listado
        </a>
    </div>

</div>
{% endblock %}

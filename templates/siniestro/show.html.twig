{% extends 'base.html.twig' %}

{% block title %}Detalle del Siniestro{% endblock %}

{% block body %}
<div class="container mt-5">

    <h1 class="text-center mb-4">Detalle del Siniestro #{{ siniestro.id }}</h1>

    <div class="card p-4 shadow-sm mb-4">
        <h4 class="mb-3">üìå Informaci√≥n del Siniestro</h4>

        <p><strong>Fecha:</strong> {{ siniestro.fecha|date('d/m/Y') }}</p>
        <p><strong>Hora:</strong> {{ siniestro.hora|date('H:i') }}</p>
        <p><strong>Severidad:</strong> {{ siniestro.severidad }}</p>
        <p><strong>Estado:</strong> {{ siniestro.estado }}</p>
        <p><strong>Localidad:</strong> {{ siniestro.localidad }}</p>
        <p><strong>Calle:</strong> {{ siniestro.calle }}</p>
        <p><strong>Coordenadas:</strong> {{ siniestro.coordenadas ?? '‚Äî' }}</p>
        <p><strong>Nro Acta:</strong> {{ siniestro.nroActa }}</p>
        <p><strong>Descripci√≥n:</strong> {{ siniestro.descripcion }}</p>
    </div>

    <div class="card p-4 shadow-sm mb-4">
        <h4 class="mb-3">üßç Personas Involucradas</h4>

        {% if siniestro.detalleSiniestros|length == 0 %}
            <p class="text-muted">No hay personas registradas.</p>
        {% endif %}

        {% for detalle in siniestro.detalleSiniestros %}
            <div class="border rounded p-3 mb-3">
                <h5>{{ detalle.persona.nombre }} {{ detalle.persona.apellido }}</h5>
                <p><strong>DNI:</strong> {{ detalle.persona.dni }}</p>
                <p><strong>Rol:</strong> {{ detalle.rolPersona.nombre }}</p>
                <p><strong>Estado alcoh√≥lico:</strong> {{ detalle.estadoAlcoholico }}</p>

                {% if detalle.porcentajeAlcohol %}
                    <p><strong>Porcentaje de alcohol:</strong> {{ detalle.porcentajeAlcohol }}</p>
                {% endif %}

                {% if detalle.observaciones %}
                    <p><strong>Observaciones:</strong> {{ detalle.observaciones }}</p>
                {% endif %}

                {% if detalle.rutaDocumento %}
                    <a href="{{ asset('uploads/documentos/' ~ detalle.rutaDocumento) }}"
                       target="_blank" class="btn btn-outline-primary btn-sm">
                        üìé Ver documento
                    </a>
                {% endif %}
            </div>
        {% endfor %}
    </div>

    <div class="card p-4 shadow-sm mb-4">
        <h4 class="mb-3">üöó Veh√≠culos Involucrados</h4>

        {% set vehiculos = siniestro.vehiculoSiniestros %}
        {% if vehiculos|length == 0 %}
            <p class="text-muted">No hay veh√≠culos registrados.</p>
        {% endif %}

        {% for v in vehiculos %}
            <div class="border rounded p-3 mb-3">
                <h5>{{ v.vehiculo.marca }} {{ v.vehiculo.modelo }}</h5>
                <p><strong>Patente:</strong> {{ v.vehiculo.patente }}</p>

                {% if v.persona %}
                    <p><strong>Conductor:</strong> {{ v.persona.nombre }} {{ v.persona.apellido }}</p>
                {% endif %}
            </div>
        {% endfor %}
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_siniestro_index') }}" class="btn btn-secondary">
            ‚¨ÖÔ∏è Volver al listado
        </a>

        <a href="{{ path('app_siniestro_edit', {id: siniestro.id}) }}" class="btn btn-primary">
            ‚úèÔ∏è Editar Siniestro
        </a>
    </div>

</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Siniestro{% endblock %}

{% block body %}
    <h1>Siniestro</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ siniestro.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ siniestro.fecha ? siniestro.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Hora</th>
                <td>{{ siniestro.hora ? siniestro.hora|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ siniestro.descripcion }}</td>
            </tr>
            <tr>
                <th>Severidad</th>
                <td>{{ siniestro.severidad }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ siniestro.estado }}</td>
            </tr>
            <tr>
                <th>Localidad</th>
                <td>{{ siniestro.localidad }}</td>
            </tr>
            <tr>
                <th>Calle</th>
                <td>{{ siniestro.calle }}</td>
            </tr>
            <tr>
                <th>Coordenadas</th>
                <td>{{ siniestro.coordenadas }}</td>
            </tr>
            <tr>
                <th>NroActa</th>
                <td>{{ siniestro.nroActa }}</td>
            </tr>
            <tr>
                <th>Documentos</th>
                {% for detalle in siniestro.detalleSiniestros %}
                    {% if detalle.rutaDocumento %}
                        <a href="{{ asset('uploads/documentos/' ~ detalle.rutaDocumento) }}" 
                        target="_blank" 
                        class="btn btn-outline-primary my-2">
                            ðŸ“Ž Ver documento del detalle #{{ detalle.id }}
                        </a>
                    {% endif %}
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_siniestro_index') }}">Volver a la lista</a>

    <a href="{{ path('app_siniestro_edit', {'id': siniestro.id}) }}">Editar</a>

    {{ include('siniestro/_delete_form.html.twig') }}
{% endblock %}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mi Proyecto{% endblock %}</title>
    <link rel="icon" href="{{ asset('images/logo2.png') }}" type="image/png">
    {# Bootstrap 5 (CSS) #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-light">

{#  Barra de navegaci贸n responsive #}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">

        {#  Logo + marca #}
        <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
            <img 
                src="{{ asset('images/logo.png') }}" 
                alt="Logo" 
                style="height: 50px; object-fit: contain;"
                class="me-2"
            >
            <span>Mi Proyecto</span>
        </a>

        {#  Bot贸n hamburguesa (solo visible en m贸viles) #}
        <button 
            class="navbar-toggler" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#navbarNav" 
            aria-controls="navbarNav" 
            aria-expanded="false" 
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        {#  Men煤 colapsable #}
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link text-white" href="{{ path('app_home') }}">Inicio</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="{{ path('app_siniestro_index') }}">Siniestros</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="{{ path('app_detalle_siniestro_index') }}">Detalle Siniestros</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="{{ path('app_vehiculo_index') }}">Veh铆culos</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="{{ path('app_persona_index') }}">Personas</a></li>

                {% if app.user %}
                    <li class="nav-item mt-2 mt-lg-0">
                        <a class="btn btn-outline-light ms-lg-3" href="{{ path('app_logout') }}">Cerrar sesi贸n</a>
                    </li>
                {% else %}
                    <li class="nav-item mt-2 mt-lg-0">
                        <a class="btn btn-outline-light ms-lg-3" href="{{ path('app_login') }}">Iniciar sesi贸n</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

{#  Contenido principal #}
<div class="container mt-4">
    {% block body %}
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">Formulario de Alcohol</div>
            <div class="card-body">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.estadoAlcoholico) }}
                    {{ form_widget(form.estadoAlcoholico, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.estadoAlcoholico) }}
                </div>

                <div class="mb-3" id="porcentajeAlcoholWrapper" style="display: none;">
                    {{ form_label(form.porcentajeAlcohol) }}
                    {{ form_widget(form.porcentajeAlcohol, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.porcentajeAlcohol) }}
                </div>

                <button class="btn btn-primary">Guardar</button>

                {{ form_end(form) }}
            </div>
        </div>
    {% endblock %}
</div>

{# Bootstrap JS #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const estadoAlcoholico = document.getElementById('estadoAlcoholico');
    const porcentajeWrapper = document.getElementById('porcentajeAlcoholWrapper');
    const porcentaje = document.getElementById('porcentajeAlcohol');

    if (!estadoAlcoholico || !porcentajeWrapper) return;

    function togglePorcentaje() {
        if (estadoAlcoholico.value === 'Positivo') {
            porcentajeWrapper.style.display = 'block';
        } else {
            porcentajeWrapper.style.display = 'none';
            if (porcentaje) porcentaje.value = '';
        }
    }

    estadoAlcoholico.addEventListener('change', togglePorcentaje);
    togglePorcentaje();
});
</script>
{% endblock %}
</body>
</html>
